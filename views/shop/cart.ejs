    <body>
        <%- include('../partials/navigation.ejs') %>

        <main>
            <% if (products.length > 0) { %>
             <ul>
                <% products.forEach(product => { %>
                 <li><%= product.title %> (<%= product.quantity %>)</li>
                <% }) %>
             </ul>
            <% } else { %>
             <h1>No products in cart!</h1>
            <% } %> 
        </main>

        <%- include('../partials/end.ejs') %>